}

body, html {
    height: 100%;
}

body {
    /*border: 1px solid red;*/
    display: flex;
    justify-content: center;
    align-items: center;
}


form {
    /*border: 1px solid black;*/
    width: 600px;
    height: 400px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: skyblue;
}


input {
    /*border: 1px solid red;*/
    width: 500px;
    font-size: 30px;
    margin: 10px;
    color: gray;
}

button {
    /*border: 1px solid blue;*/
    width: 30%;
    height: 10%;
    font-size: 30px;
    font-weight: bold;
    border-style: none;
}

</style>
<title>Login</title>
</head>
<body>
    <form action="/main" method="post">
        <input id="userID" type="text" name="uID" value="please type your name here">
        <button>login</button>
    </form>
    <script src="/javascripts/jquery-3.1.0.min.js"></script>
    <script>
        var Method = {};
        Method.setTextAction = function(defaultText) {
        $('#userID').focusin(function() {
            if($(this).val() == defaultText){
                $(this).val('');
                $(this).css('color', 'black');
            }
        });

        $('#userID').focusout(function() {
            if($(this).val() == '') {
                $(this).css('color', 'gray');
                $(this).val(defaultText);
            }
        });
        };

        Method.setTextAction("please type your name here");

    </script>
</body>
</html>